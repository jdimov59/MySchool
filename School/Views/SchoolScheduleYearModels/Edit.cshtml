@model School.Models.BaseScheduleYearModel

@{
    ViewBag.Title = "Edit";
}

<h2>Редактиране</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal"><br />
        <h4>Учебна година</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <div class="col-md-4 col-md-offset-4 text-center">
                @Html.EditorFor(model => model.ScheduleYear, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ScheduleYear, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4 col-md-offset-4 text-center">
                <input type="submit" value="Запази промените" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Обратно в \"Преглед\"", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
